<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nevyblue"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20sp"
            app:cardElevation="50sp"
            app:cardMaxElevation="25sp"
            app:cardPreventCornerOverlap="true">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/img" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/startapp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="15sp"
            android:background="@drawable/round_butten"
            android:gravity="center"
            android:text="Start App             Click Here ->"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutus"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="15sp"
            android:background="@drawable/round_butten"
            android:gravity="center"
            android:text="About Us               Click Here ->"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/txtshare"
                android:layout_width="170sp"
                android:layout_height="50sp"
                android:layout_margin="15sp"
                android:background="@drawable/round_butten"
                android:gravity="center"
                android:text="@string/share_app"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rateapp"
                android:layout_width="170sp"
                android:layout_height="50sp"
                android:layout_margin="15sp"
                android:background="@drawable/round_butten"
                android:gravity="center"
                android:text="@string/rate_app"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>